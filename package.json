{
  "name": "z-games-api",
  "version": "0.1.0",
  "private": false,
  "description": "A back-end part of the tiny board games portal",
  "license": "Apache-2.0",
  "repository": "git+ssh://git@github.com:zinovik/z-games-api.git",
  "keywords": [
    "NodeJS",
    "TypeScript",
    "socket.io",
    "NestJS",
    "games",
    "board games"
  ],
  "homepage": "https://github.com/zinovik/z-games-api#readme",
  "author": "Max Zinovik <zinovik@gmail.com>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts*\" \"test*/**/*.ts*\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "eslint --fix './src/**/*.ts'",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "engines": {
    "node": ">=12.7",
    "npm": ">=6.10"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/platform-socket.io": "^6.5.3",
    "@nestjs/testing": "^6.5.3",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.5.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.12",
    "@types/mongoose-unique-validator": "^1.0.2",
    "@types/node": "^12.7.0",
    "@types/nodemailer": "^6.2.1",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "axios": "^0.21.1",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cloudinary": "^1.14.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongodb-memory-server": "^5.1.10",
    "mongoose": "^5.6.8",
    "mongoose-unique-validator": "^2.0.3",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.3",
    "z-games-base-game": "^0.0.23",
    "z-games-lost-cities": "^0.0.21",
    "z-games-no-thanks": "^0.0.19",
    "z-games-perudo": "^0.0.19",
    "z-games-six-nimmt": "^0.0.25"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test && rimraf dist && npm run build"
    }
  }
}
